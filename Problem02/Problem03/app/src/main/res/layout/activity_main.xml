<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/music1"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:layout_marginLeft="30px"
                android:text="song1.mp3"></TextView>
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"></RadioButton>
            <TextView
                android:id="@+id/music2"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:layout_marginLeft="30px"
                android:text="song2.mp3"></TextView>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"></RadioButton>
            <TextView
                android:id="@+id/music3"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:layout_marginLeft="30px"
                android:text="song3.mp3"></TextView>
            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"></RadioButton>
            <TextView
                android:id="@+id/music4"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:layout_marginLeft="30px"
                android:text="song4.mp3"></TextView>
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"></RadioButton>
        </RadioGroup>
    <Button
        android:id="@+id/btn_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="듣기"></Button>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_pause"
        android:layout_width="515px"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="일시정지"
        android:visibility="invisible"></Button>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="515px"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:text="중지"
        android:visibility="invisible"></Button>
    </LinearLayout>
</LinearLayout>